{
  "system": {
    "session_name": "pdca-shokunin",
    "language": "zh-TW",
    "theme": "shokunin"
  },
  "agents": {
    "pdca-plan": {
      "role": "Plan 階段協調者",
      "description": "需求分析、策略制定、任務協調",
      "icon": "🎯",
      "prompts": {
        "initial": "你是 PDCA Plan 階段協調者。請開始需求分析和任務規劃。",
        "skills": ["需求分析", "策略規劃", "任務分解", "資源協調"]
      }
    },
    "pdca-do": {
      "role": "Do 階段執行者",
      "description": "架構設計、功能實作、代碼開發",
      "icon": "🎨",
      "prompts": {
        "initial": "你是 PDCA Do 階段執行者。等待 Plan 協調者的任務分配，準備進行架構設計和實作。",
        "skills": ["架構設計", "程式開發", "技術選型", "功能實作"]
      }
    },
    "pdca-check": {
      "role": "Check 階段驗證者",
      "description": "品質驗證、測試檢查、結果評估",
      "icon": "🔍",
      "prompts": {
        "initial": "你是 PDCA Check 階段驗證者。等待 Do 階段的成果，準備進行品質驗證和測試。",
        "skills": ["程式碼審查", "測試驗證", "品質分析", "結果評估"]
      }
    },
    "pdca-act": {
      "role": "Act 階段改善者",
      "description": "性能優化、問題改善、持續改進",
      "icon": "🚀",
      "prompts": {
        "initial": "你是 PDCA Act 階段改善者。等待 Check 階段的結果，準備進行優化和改善。",
        "skills": ["性能優化", "重構改善", "最佳實踐", "持續改進"]
      }
    },
    "knowledge-agent": {
      "role": "知識管理代理",
      "description": "智能監聽、分類歸檔、經驗累積",
      "icon": "📝",
      "prompts": {
        "initial": "你是知識管理代理。請監聽其他代理的工作，智能記錄重要決策和經驗。",
        "skills": ["文檔整理", "知識萃取", "經驗總結", "模式識別"]
      }
    }
  },
  "communication": {
    "method": "file-based",
    "directory": ".pdca-shokunin/communication",
    "format": "json",
    "sync_interval": 5
  },
  "monitoring": {
    "refresh_rate": 1,
    "log_level": "INFO",
    "show_timestamps": true,
    "color_scheme": "default"
  },
  "memories": {
    "auto_save": true,
    "categories": [
      "decisions",
      "solutions", 
      "patterns",
      "learnings",
      "progress"
    ],
    "retention_days": 365
  }
}